<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_developer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.hasan.miuportal.Developer">

    <ImageView
        android:id="@+id/devImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dev" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@android:color/black"
        android:text="Abdullah Al Hasan"
        android:textAllCaps="true"
        android:textColor="#1b5e20"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@android:color/black"
        android:text="34th Batch, Dept. of CSE"
        android:textColor="#1b5e20"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@android:color/black"
        android:text="Manarat International University"
        android:textAllCaps="true"
        android:textColor="#1b5e20"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:shadowColor="@android:color/black"

        android:text="Contact: 019254469"
        android:textColor="#1b5e20"
        android:textSize="16sp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:shadowColor="@android:color/black"

        android:text="Email: engr.abdullahalhasan224@gmail.com"
        android:textColor="#1b5e20"
        android:textSize="16sp" />


</LinearLayout>
